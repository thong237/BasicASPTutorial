@model Student;
@{
    ViewData["Title"] = "บันทึกข้อมูล";
}

<h1 class="text-center">บันทึกคะแนนสอบ</h1>
@*<form method="get">*@
    <form method="post" asp-controller="Student" asp-action="Create">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Score"></label>
        <input type="number" asp-for="Score" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary my-2">บันทึก</button> 


</form>

